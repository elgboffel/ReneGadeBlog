@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
}

<section class="page">
    <header class="header">
        <div class="inner">
            <div class="col lg-12 inner">
                <h1>@CurrentPage.title</h1>
                <h2>@CurrentPage.subtitle</h2>
            </div>
        </div>
    </header>

    <div class="container-wrap">
        <!-- Accordion Items -->
        <div class="col-md-8 col-sm-7 accordion">
            <div class="inner">

                @foreach (var item in CurrentPage.Children)
                {
                    <div class="accordion_in">
                        <div class="acc_head"><h3>@item.Name</h3><span class="line"></span></div>
                        <div class="acc_content">
                            <p>
                                @item.content
                            </p>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- Accordion Items End -->
        <!-- Sidebar -->
        <div class="col-md-4 col-sm-5 sidebar">

            @{Html.RenderPartial("_Sidebar");}

        </div>
        <!-- Sidebar End -->

    </div>
</section>